@model ImgFix.Models.SingleImage

@{
    ViewBag.Title = "Image Page";
}


<section class="imagesection">
    <div class="image" >
        <div class="image" style="background-image: url('@Model.Mime,@Model.Data')"></div>
        <button type="button" name="button">Download</button>
    </div>
    <div class="text">
        <div class="text-wrapper">
            <h1>@Model.Name</h1>
            <div class="textfield">
                <p>
                    @Model.Text
                </p>
            </div>
            
        </div>
        <button type="button" name="button">Scan another</button>
    </div>
</section>