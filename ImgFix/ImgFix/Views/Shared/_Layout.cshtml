<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <section class="signin">
        <div class="signinmodal">
            <h1 class="signin-title">Sign in</h1>
            <input type="text" name="username" placeholder="Username" value="">
            <input type="password" name="password" placeholder="Password" value="">
            <button type="button" name="button">Sign in</button>
        </div>
        <div class="signinbackground" onclick="$(this).parent().fadeOut(200)"></div>
    </section>
    <section class="header">
        <a href="@Url.Action("Index", "Home")" class="title"><h1>ImgFix</h1></a>
            <div class="header-right">
                <a href="@Url.Action("MyImages", "Home")"><button type="button" name="myimages"><h3>My images</h3></button></a>
                <button type="button" name="login" onclick="$('.signin').fadeIn(200)"><h3>Log in</h3></button>
            </div>
</section>
        @RenderBody()
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
